<UserControl
    x:Class="CommentLetters.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CommentLetters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    
    <StackPanel Background="{ThemeResource SystemControlBackgroundAltHighBrush}">
        <Image Source="Assets/letterhead.png" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10" MaxHeight="65"></Image>
        <TextBox x:Name="userNameInput" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" PlaceholderText="User Name" Width="250"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" PlaceholderText="Password"/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Click="button_Click" Margin="0,10,0,0"/>

    </StackPanel>
</UserControl>
